<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/ivDts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dts"
        android:layout_centerInParent="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDtsTitle"
        android:text="DIGITAL TALENT SCHOOLARSHIP"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/ivDts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTahun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvPoliban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POLITEKNIK NEGRI BANJARMASIN"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ivDts"
        tools:ignore="HardcodedText" />
</RelativeLayout>